  each theme in themes
    li.themes__item
      if activeCategoryId == theme.id
        a.themes__item-link.themes__item-link--active(href=`/categories/${theme.id}`)
          | #{theme.name}
          //- sup 88 // TODO здесь кажется должно быть количество статей, которые относятся к данной теме - категории
      else
        a.themes__item-link(href=`/categories/${theme.id}`)
          | #{theme.name}
          //- sup 88 // TODO здесь кажется должно быть количество статей, которые относятся к данной теме - категории
